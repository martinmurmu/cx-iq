<style>
.shedule-form, .sign-in-form, .sign-up-form {
  height: auto;
}
.content-wrap > .content {
  height: auto;
  min-height: 720px;
}

</style>

<div class="text-head"><h1>Register Below <span class="h1_super">(or <%= link_to 'click here to login', new_user_session_path,  :class=>"blueHyperLink" %>)</span> </h1><hr /></div>
<div class="sign-up-form">
  <% form_for resource_name, resource, :url => registration_path(resource_name), :html => {:id=>"signup_formy"} do |f| -%>
    <table>
      <tr>
        <td>
          <%= f.error_messages %>
        </td>
      </tr>
      <tr>
        <td>
          <label for="user_email">Email <span style="color:#666666;">*</span></label>
          <%= f.text_field :email, :tabindex=>"1", :style=>"width: 400px; margin-left: 0px;", :class=>"editbox1" %>
          <label for="user_password">Password <span style="color:#666666;">*</span></label>
          <%= f.password_field :password, :class=>"editbox1", :tabindex=>"2", :style=>"width: 400px; margin-left: 0px;" %>
          <span class="normal"> Password must be at least 6 symbols long, no spaces </span>
          <br/>
          <label for="user_password_confirmation">Confirm Password <span style="color:#666666;">*</span></label>
          <%= f.password_field :password_confirmation, :class=>"editbox1", :tabindex=>"3", :style=>"width: 400px; margin-left: 0px;" %>
          <label for="user_first_name">First Name <span class="normal">(Optional)</span></label>
          <%= f.text_field :first_name, :tabindex=>"4", :style=>"width: 400px; margin-left: 0px;", :maxlength=>"100", :class=>"editbox1" %>
          <label for="user_last_name">Last Name <span class="normal">(Optional)</span></label>
          <%= f.text_field :last_name, :tabindex=>"4", :style=>"width: 400px; margin-left: 0px;", :maxlength=>"100", :class=>"editbox1" %>          
          <label for="user_company">Company <span class="normal">(Optional)</span></label>
          <%= f.text_field :company, :tabindex=>"5", :style=>"width: 400px; margin-left: 0px;", :maxlength=>"100", :class=>"editbox1" %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.check_box :terms_of_service %>
          <label class="label1">I agree to the<a class="blueHyperLinkSmall" onclick="window.open('/TermsOfService', 'ts_window', 'status=1, toolbar=1, location=0, menubar=0, resizable=1, height=600, width=800, scrollbars=1');" href="#" name="loginSubview:registerForm:termsLink" id="loginSubview:registerForm:termsLink">
          'Terms of Service'</a>
          </label>
          <br/><br/>
          <%= nice_captcha %>
          <%= f.submit "Register", :tabindex=>"6", :style=>"width: 80px;", :class=>"actionButton", :id => "submit" %>
        </td>
      </tr>
    </table>
  <% end %>
</div>
<div style="clear:both;height:20px;"></div>